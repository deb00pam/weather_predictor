{
  "name": "nasa-weather-risk-app",
  "version": "1.0.0",
  "description": "NASA Weather Risk Detection Desktop App - Personalized weather risk assessment for outdoor activities",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "build-win": "electron-builder --win",
    "build-mac": "electron-builder --mac",
    "build-linux": "electron-builder --linux"
  },
  "keywords": [
    "NASA",
    "weather",
    "risk",
    "assessment",
    "outdoor",
    "activities",
    "electron",
    "desktop"
  ],
  "author": "NASA Space Apps Challenge Team",
  "license": "MIT",
  "devDependencies": {
    "electron": "^27.0.0",
    "electron-builder": "^24.6.4"
  },
  "dependencies": {
    "axios": "^1.5.0",
    "chart.js": "^4.4.0"
  },
  "build": {
    "appId": "com.nasa.weather-risk-app",
    "productName": "NASA Weather Risk Detection",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*"
    ],
    "win": {
      "target": "nsis"
    },
    "mac": {
      "target": "dmg"
    },
    "linux": {
      "target": "AppImage"
    }
  }
}